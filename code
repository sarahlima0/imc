seu_imc = calcular_imc(peso, altura)
    print(f"Seu IMC é: {seu_imc:.2f}")
    print(f"Sua condição é: {interpretar_imc(seu_imc)}")
def calcular_imc(peso, altura):
    imc = peso / (altura ** 2)
    return imc

def interpretar_imc(imc):
    if imc < 18.5:
        return "Abaixo do peso"
    elif imc < 25:
        return "Peso normal"
